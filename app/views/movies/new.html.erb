<h1> Bienvenido a Streaming</h1>

<h2> Ingresa tu Pelicula, Serie o Documental </h2>
<%= form_with model: @movie, method: :post do |form| %>
 <div>
 <%= form.label :name, "Movie Title" %>
 <%= form.text_field :name %>
 </div>
 <div>
 <%= form.label :synopsis, "Movie Synopsis" %>
 <%= form.text_field :synopsis %>
 </div>
<div>
 <%= form.label :director, "Movie Director" %>
 <%= form.text_field :director %>
 </div>
 <div>
 <%= form.submit %>
 </div>
<% end %>